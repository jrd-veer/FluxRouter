# FluxRouter Environment Configuration
# Copy this file to .env and customize the values

# Application Environment
ENVIRONMENT=development
COMPOSE_PROJECT_NAME=fluxrouter

# Flask Backend Configuration
FLASK_ENV=production
DEBUG=false
# IMPORTANT: Generate a new secret key for production environments.
# You can generate one with the following command:
# openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production-use-random-string

# Service Ports (internal)
WEB_PORT=80
BACKEND_PORT=5000
PROXY_HTTP_PORT=80
PROXY_HTTPS_PORT=443

# Logging Configuration
LOG_LEVEL=INFO

# Security Settings
ALLOWED_HOSTS=localhost,*.local

# Container Resource Limits (for future use)
WEB_MEMORY_LIMIT=128m
BACKEND_MEMORY_LIMIT=256m
PROXY_MEMORY_LIMIT=128m

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Development overrides (uncomment for development)
# DEBUG=true
# FLASK_ENV=development
# LOG_LEVEL=DEBUG
